<%= content_for(:title, "Users") %>

<h1>Users</h1>
  <div class="row col-md-6 col-md-offset-2 custyle">
    <table class="table table-striped custab">
      <thead>
          <%= link_to new_user_path, class: 'btn btn-primary btn-xs pull-right' do %>
            <b>+</b> Add new user
          <% end %>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th class="text-center">Action</th>
          </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td class="text-center">
              <%= link_to edit_user_path(user), class: 'btn btn-info btn-xs' do %>
                <span class="glyphicon glyphicon-edit"></span> Edit
              <% end %>

              <%= link_to user, method: :delete, data: { confirm: 'Are you sure to delete user: ' + user.name + '?' }, class: 'btn btn-info btn-xs' do %>
                <span class="glyphicon glyphicon-remove"></span> Del
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>